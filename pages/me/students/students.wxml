<view class='xipu-card__page'>

  <view class='xipu-card__default' wx:for="{{students}}" wx:key="{{item.id}}">
    <view class='xipu-card__bd-item'>

      <view>
        <text>{{item.name}}</text>
        <image src='../../../images/{{item.gender==0?"male":"female"}}.svg' class='xipu-icon__gender'></image>
      </view>

      <text class='color-gray'>{{item.progressName}}</text>

      <view>
        <image class='xipu-icon__right' src='../../../images/phone-gray.svg' data-tel='{{item.tel}}' bindtap='callStudent'></image>
      </view>

    </view>
  </view>

</view>
