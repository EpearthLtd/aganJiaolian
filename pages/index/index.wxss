.placeholder{
    margin: 5px;
    padding: 0 10px;
    text-align: center;
    background-color: #EBEBEB;
    height: 2.3em;
    line-height: 2.3em;
    color: #cfcfcf;
}

.info-item {
  width: 200rpx;
  display: flex;
  flex-direction: column
}

.xipu-bradge__light__blue {
  padding: 3rpx 10rpx;
  color: #2693FF;
  font-size: x-small;
  height: 32rpx;
  border: 1rpx #2693FF solid;
  border-radius: 32rpx
}

.xipu-image__car {
  margin: 0 auto;
  width: 690rpx;
  height: 388rpx
}

.xipu-text__xx-small__center {
  display: block;
  text-align: center;
  font-size: xx-small;
}

.xipu-user__photo {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  border: 3px solid #FFF;
  box-shadow: 0 0 0 0.5px rgba(100,100,100,.2);
  margin-top: 5px
}

.xipu-user__info__image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 3px solid #FFF;
  box-shadow: 0 0 0 0.5px rgba(100,100,100,.2);
  margin-top: 5px
}