  margin-right: 40rpx;
}

.xipu-user__name {
  font-size: medium;
}

.xipu-user__add {
  font-size: smaller;
  color: #999;
}

.info-cont{
    border-top:solid 1px #f0f0f0;
    padding-top: 30rpx;
    display: flex;
    flex-direction: column;

}
.infoMain{
    border-bottom:solid 1px #f0f0f0;
    display: flex;
    background-color: #fff;
    flex-direction: column;
    margin-bottom: 30rpx;
}
